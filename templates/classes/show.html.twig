{% extends 'base.html.twig' %}

{% block title %}Classes{% endblock %}

{% block content %}
    <h1>Classes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ class.name }}</td>
            </tr>
            <tr>
                <th>Students</th>
                <td>{{ class.students ? class.students|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ class.school ? class.school|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_classes_index') }}">back to list</a>

    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">edit</a>

    {{ include('classes/_delete_form.html.twig') }}
{% endblock %}
