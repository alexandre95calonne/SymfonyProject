{% extends 'base.html.twig' %}

{% block title %}Classes index{% endblock %}

{% block content %}
    <h1>Classes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Students</th>
                <th>School</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr>
                <td>{{ class.id }}</td>
                <td>{{ class.name }}</td>
                <td>{{ class.students ? class.students|join(', ') : '' }}</td>
                <td>{{ class.school ? class.school|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_classes_show', {'id': class.id}) }}">show</a>
                    <a href="{{ path('app_classes_edit', {'id': class.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classes_new') }}">Create new</a>
{% endblock %}
